{
  "name": "firstly-monorepo",
  "version": "0.0.0",
  "description": "An opinionated Remult setup !",
  "keywords": [
    "remult",
    "svelte",
    "sveltekit"
  ],
  "license": "MIT",
  "type": "module",
  "bin": "./esm/bin/cmd.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/jycouet/firstly",
    "homepage": "https://github.com/jycouet/firstly"
  },
  "scripts": {
    "//// ---- BEST PRACTICES ---- ////": "",
		"lint": "kitql-lint",
		"format": "kitql-lint -f",
    "//// ---- PROD ---- ////": "",
    "release:version": "npm run changeset version",
    "release": "pnpm -F firstly compile && changeset publish",
    "//// OTHERS ////": "",
    "reset": "git clean -xdf",
    "up-dep": "pnpm -r up --latest"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.1",
    "@kitql/eslint-config": "0.5.1",
    "@playwright/test": "1.49.1",
    "prettier": "3.4.2"
  },
  "sideEffects": false,
  "publishConfig": {
    "directory": "dist",
    "access": "public"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "exports": {},
  "engines": {
    "node": ">=18"
  }
}
